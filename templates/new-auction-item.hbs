<div class="container">
<h1>New Auction Item</h1>

<form>
  <div class="form-group">
    <label for="image">Enter your image url:</label>
    {{input id="image" class="form-control" value=image}}
  </div>

  <div class="form-group">
    <label for="title">Enter your item title:</label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="price">Enter the price of your item:</label>
    {{input id="price" class="form-control" value=price}}
  </div>

  <div class="form-group">
    <label for="description">Enter a description of your item:</label>
    {{textarea id="description" class="form-control" rows="10" value=description}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>
</div>
